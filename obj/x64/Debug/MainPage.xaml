<Page
    x:Class="NewZip.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewZip"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid Margin="0,0,200,0" HorizontalAlignment="Center">
            <Button x:ConnectionId='6' Content="Comprimir" Margin="0,100,0,0" VerticalAlignment="Center" 
                    HorizontalAlignment="Center"                     />
            <TextBox x:ConnectionId='7' HorizontalAlignment="Center" Margin="0,0,0,0" Text="Archivo" 
                    TextWrapping="Wrap" VerticalAlignment="Center" Name="WishedName" TextAlignment="Center"/>
        </Grid>
        <Grid HorizontalAlignment="Center" Margin="200,0,0,0">
            <Button x:ConnectionId='4' Content="Descomprimir" Margin="0,100,0,0" VerticalAlignment="Center" 
                    HorizontalAlignment="Center"                        />
            <TextBox x:ConnectionId='5' HorizontalAlignment="Center" Margin="0,0,0,0" Text="Archivo" 
                    TextWrapping="Wrap" VerticalAlignment="Center" Name="WishedFolder" TextAlignment="Center"/>
        </Grid>
        <CommandBar VerticalAlignment="Bottom" Margin="0,0,0,0">
            <AppBarButton x:ConnectionId='2' Label="Cambiar tema" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0" Width="105"                    >
                <FontIcon x:ConnectionId='3' Name="ThemeImage" FontFamily="Segoe MDL2 Assets" Glyph="&#xE706;"></FontIcon>
            </AppBarButton>
        </CommandBar>

    </Grid>
</Page>

